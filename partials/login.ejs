<div class="login-form">
    <div class="form-container">
      <form action="/account/login" method="POST" class="login-form">
        <div class="form-group">
          <label for="email">E-mail:</label>
          <input type="email" id="email" name="account_email" required placeholder="Email">
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input type="password" id="password" name="account_password" required placeholder="Type your password">
        </div>
        <button type="submit">Login</button>
      </form>
      <span><p>No account? <a href="/account/register">Sign-up</a></p></span>
    </div>
  </div>
  