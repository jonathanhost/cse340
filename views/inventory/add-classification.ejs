<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
    <p><%- messages() %></p>

    <% if (errors && errors.length > 0) { %>
      <ul class="error-messages">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
    
  
<div class="add-classification">
    <div class="form-container">
      <form action="/inv/add-classification" method="POST" class="login-form">
        <div class="form-group">
          <label for="text">Classification Name:</label>
          <p>Name Must Be Alphabetic Characters Only</p>
          <input type="text" id="classification_name" name="classification_name" required placeholder="Classification">
        </div>
        <button type="submit">Add Classification</button>
    </div>
  </div>