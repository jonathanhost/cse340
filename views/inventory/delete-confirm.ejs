<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<p><%- messages() %></p>

<% if (errors && errors.length > 0) { %>
  <ul class="error-messages">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<div class="remove-vehicle">
  <div class="form-container">
    <form action="/inv/delete" method="POST" class="registerform-">
      <div class="form-group">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>" readonly>
      </div>
      
      <div class="form-group">
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>" readonly>
      </div>

      <div class="form-group">
        <label for="inv_price">Price:</label>
        <input type="text" id="inv_price" name="inv_price" required value="<%= inv_price %>" readonly>
      </div>

      <div class="form-group">
        <label for="inv_year">Year:</label>
        <input type="text" id="inv_year" name="inv_year" required value="<%= inv_year %>" readonly>
      </div>

      <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>">

      <button type="submit">Delete Vehicle</button>
    </form>
  </div>
</div>
